def module_options_init(publish_dir="", args="", suffix="", publish_results="all", publish_by_id=false, args2="") {
    def Map options = [:]
    options.publish_dir = publish_dir
    options.args = args
    options.suffix = suffix
    options.publish_results = publish_results
    options.publish_by_id = publish_by_id
    options.args2 = args2
    return options
}

def Map modules = [:]
modules['samplesheet_check'] = module_options_init(publish_dir="pipeline_info")
modules['fastqc']            = module_options_init(publish_dir="fastqc",     args="--quiet")
modules['trimgalore']        = module_options_init(publish_dir="trimgalore", args="--fastqc")

params.modules = modules
println(params.modules)
